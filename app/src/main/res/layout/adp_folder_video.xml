<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/card_music_bg"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">

        <ImageView
            android:id="@+id/image_folder"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:tint="@color/orange"
            app:srcCompat="@drawable/ic_folder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image_folder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_folder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="folder_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/text_video_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="folder_name"
                android:textColor="@color/txt_sub"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>